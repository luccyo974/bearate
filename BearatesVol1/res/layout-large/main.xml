<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@drawable/parchemin"
              tools:context=".MyActivity" >

    <LinearLayout
            android:id="@+id/rightCol"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:orientation="vertical"
        android:padding="15dp">


        <Button
            android:id="@+id/buttonSommaire"
            android:layout_width="220dp"
            android:soundEffectsEnabled="false"
            android:layout_height="wrap_content"
            android:onClick="goToPage20"
            android:background="@drawable/panneau"
            android:text="Sommaire"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"
            android:textStyle="bold|italic"
            android:layout_marginTop="80dp" />

        <Button
            android:id="@+id/buttonAudio"
            android:layout_width="220dp"
            android:soundEffectsEnabled="false"
            android:layout_height="wrap_content"
            android:onClick="launchAudioAuto"
            android:background="@drawable/panneau"
            android:text="Lecture automatique"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button2"
            android:layout_width="220dp"
            android:soundEffectsEnabled="false"
            android:layout_height="wrap_content"
            android:onClick="goToPage1"
            android:background="@drawable/panneau"
            android:text="@string/page1"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/author"
            android:id="@+id/textView"
            android:gravity="center_vertical|center_horizontal|bottom"
            android:textStyle="bold|italic"
            android:layout_gravity="center_horizontal"
            android:textColor="#353535"
            android:paddingBottom="20dp" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/leftCol"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:layout_above="@+id/buttonNext"
            android:background="@drawable/couverture" />
    </LinearLayout>

</LinearLayout>